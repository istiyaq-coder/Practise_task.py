#Write a program to find the leap year
year = int(input("Enter the year which you have to check : "))

if year % 4 == 0 and year % 100 != 0 :
    print(f"{year} is a leap year ")

elif year % 400 == 0 :
    print(f"{year} is  a leap year ")

else :
    print(f"{year} is not a leap year ")
                            #OR
year = int(input("Enter the year which you have to check : "))

if year % 4 == 0 :
    if year % 100 == 0 :
        if year % 400 == 0 :
            print("A leap year ")
        else :
            print("Not a leap year")
    else:
        print("A leap year")
else:
    print("not a leap year")
